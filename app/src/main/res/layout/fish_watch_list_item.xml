<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fishCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/default_margin"
    app:cardCornerRadius="@dimen/default_margin_small"
    app:cardBackgroundColor="@color/baby_blue"
    android:layout_margin="@dimen/default_margin_mini">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFishListImage"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/default_margin_large"
            android:layout_marginVertical="@dimen/default_margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFishListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/default_margin_mini"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/default_margin_small"
            android:text="@string/fish_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivFishListImage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHabitatImpact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:elevation="@dimen/default_margin_mini"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:padding="@dimen/default_margin_small"
            android:text="@string/habitat_impacts"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFishListName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>